#-----2-------
timedatectl set-timezone Asia/Ho_Chi_Minh ;
echo "en_US.UTF-8 UTF-8" >> /etc/locale.gen ;
locale-gen ;
echo "LANG=en_US.UTF-8" > /etc/locale.conf ;
export LANG=en_US.UTF-8 ;
echo ea > /etc/hostname ;
echo '127.0.0.1  localhost
::1	localhost
127.0.1.1	ea.localhost' >> /etc/hosts ;
echo 'Enter passphrase for root:" ;
passwd ;
pacman -S grub efibootmgr ;
mkdir /boot/efi ;
read -p "Enter your boot partitions( sda1 or sdb1,..):" boot ;
mount /dev/$boot /boot/efi ;
read -p "Enter your bootloader name( sda1 or sdb1,..):" bname ;
grub-install --target=x86_64-efi --bootloader-id=$bname --efi-directory=/boot/efi ;
grub-mkconfig -o /boot/grub/grub.cfg ;
pacman -S networkmanager ;
systemctl enable NetworkManager ;
#umount -R /mnt
#reboot
# mkswap /dev/sdb3
# swapon /dev/swap partition
read -p "Enter a user:" user1 ;
useradd -m $user1  ;
usermod -aG wheel $user1 ;
useradd -m $user1 -G wheel ;
read -p "Enter password for user:" ;
passwd $user1 ;
echo "User $user1 was added to wheel group !" ;
echo "# umount -R /mnt" ;
echo "Installation succeeded ! You can un mount /mnt and reboot installation" && sleep 3 ;
exit ;
